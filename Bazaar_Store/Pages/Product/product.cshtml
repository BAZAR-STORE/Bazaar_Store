@page
@model Bazaar_Store.Pages.Product.productModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<h1>Detail of Gategory</h1>
<h1>@Model.categories.Name </h1>
<h3>More Info For Category: @Model.categories.Details </h3>
<div style="display:flex;justify-content: space-between;flex-wrap: wrap;">
    @foreach (var item in Model.categories.ProdectList)
    {
        <a asp-page="/Catergories/ProductDetails" asp-route-id="@item.Id">
            <div style="padding-bottom:50px">
                <img src="@item.URL" style=" width: 300px; height:280px" />
                <h3>@item.Name</h3>
                <h3>@item.Price</h3>
                <h3>@item.TodaysDeals</h3>
            </div>
        </a>
    }
</div>