@model Bazaar_Store.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
}



<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text"></div>
    <label asp-for="Name" class="label-Name"></label>
    <input asp-for="Name" class="form-control" />

    <div asp-validation-summary="ModelOnly" class="text"></div>
    <label asp-for="BarCode" class="label-Details"></label>
    <input asp-for="BarCode" class="form-control" />

    <div asp-validation-summary="ModelOnly" class="text"></div>
    <label asp-for="Price" class="label-Details"></label>
    <input asp-for="Price" class="form-control" />

    <div asp-validation-summary="ModelOnly" class="text"></div>
    <label asp-for="DiscountPrice" class="label-Details"></label>
    <input asp-for="DiscountPrice" class="form-control" />

    <div asp-validation-summary="ModelOnly" class="text"></div>
    <label asp-for="Description" class="label-Details"></label>
    <input asp-for="Description" class="form-control" />

    <div asp-validation-summary="ModelOnly" class="text"></div>
    <label asp-for="TodaysDeals" class="label-Details"></label>
    <input asp-for="TodaysDeals" class="form-control" />

    

    <input type="submit" value="Create" class="btnsubmit " />
</form>



