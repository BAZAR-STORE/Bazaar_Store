            <td>
                @item.Name
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @item.BarCode
            </td>

            <td>
                @item.DiscountPrice
            </td>
            <td>
                @item.TodaysDeals
            </td> 
            <td>
                @item.Url
            </td>
            <td>
                <a src="Edit.cshtml" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a src="Delete.cshtml" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
