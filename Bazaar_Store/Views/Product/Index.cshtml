@model IEnumerable<Bazaar_Store.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
}





<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BarCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodaysDeals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @item.BarCode
            </td>

            <td>
                @item.DiscountPrice
            </td>
            <td>
                @item.TodaysDeals
            </td> 
            <td>
                @item.URL
            </td>
            <td>
                <a src="Edit.cshtml" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a src="Delete.cshtml" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
                                          <a src="Create.cshtml" asp-action="Create" class="btn btn-outline-success my-2 my-sm-0" type="submit">Add Product</a>

