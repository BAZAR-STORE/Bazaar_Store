@model IEnumerable<Bazaar_Store.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                                    <a asp-controller="Category" asp-action="Details" asp-route-id=@item.Id>@item.Name</a>

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    <a src="Edit.cshtml" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a src="Delete.cshtml" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
                          <a src="Create.cshtml" asp-action="Create" class="btn btn-outline-success my-2 my-sm-0" type="submit">Add Category</a>
