@model Bazaar_Store.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Do you want to delete it?</h3>





<div>
    <h1>@Model.Name</h1>
    <p>@Model.Details</p>
</div>

<form asp-controller="Category" asp-action="Delete" method="post" asp-route-id="@Model.Id">
    <button type="submit" > Delete </button>

    <a asp-controller="Category" asp-action="Index"> Back to Category</a>

</form>